<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Bookers</title>
	<%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>
</head>
<body>
	<div class="index-box">
		<h2>Books</h2>
		<table>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
			<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body  %></td>
				<td><%= link_to "Show", book_path(book.id) %></td>
				<td><%= link_to "Edit", "/books/#{book.id}/edit" %></td>
				<td><%= link_to "Destroy", "/books/#{book.id}" , method: :delete, "	data-confirm" => "Are you sureï¼Ÿ" %></td>
			</tr>
			<% end %>
		</table>
	</div>

	<div class="new-box">
		<h2>New Book</h2>

		<% if @book.errors.any? %>
			<ul>
				<% @book.errors.full_messages.each do |err| %>
					<li><%= err %></li>
				<% end %>
			 </ul>
		<% end %>

		<%= form_for(@book) do |f| %>

			<h4>Title</h4>
			<%= f.text_field :title %>

			<h4>Body</h4>
			<%= f.text_area :body %>

			<div><%= f.submit 'Create Book' %></div>
		<% end %>
	</div>
</body>
</html>